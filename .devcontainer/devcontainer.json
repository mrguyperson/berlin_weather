{
  "name": "Weather Dashboard Dev",
  "image": "ghcr.io/mrguyperson/weather-image:latest",

  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "Ikuyadeu.r-pack",
        "mechatroner.rainbow-csv",
        "mutantdino.resourcemonitor"
      ],
      "settings": {
        "r.bracketedPaste": true,
        "r.alwaysUseActiveTerminal": true,
        "r.rterm.linux": "/usr/local/bin/radian"
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },

  "postCreateCommand": "which radian || pip install radian"
}
