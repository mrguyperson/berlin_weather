{
    "name": "R (rocker/r-ver base)",
    "image": "ghcr.io/rocker-org/devcontainer/r-ver:4.5",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
            "version": "prerelease",
            "installTinyTex": true
        },
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "libudunits2-dev,libxtst6,libxt6,libmagick++-dev,libglpk-dev,cmake"
        },
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": "renv,tidyverse,here,readxl,targets,tarchetypes,crew,showtext,openmeteo,ggborderline"
        },
    },
    "customizations": {
        "vscode": {
            "extensions": ["mechatroner.rainbow-csv","mutantdino.resourcemonitor"]
        },
        "codespaces": {
            "openFiles": ["README.md"]
        }
    }
}